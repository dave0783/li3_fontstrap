{
    "name": "li3_fontstrap",
    "type": "lithium-library",
    "description": "Lithium library to integrate twitter bootstrap and font-awesome in a development environment.",
    "config": {
        "minimum-stability": "dev"
    },

    "repositories": [{
        "type": "package",
        "package": {
            "name": "twitter/bootstrap",
            "version": "dev-master",
            "type": "lithium-source",
            "source": {
                "url": "https://github.com/twitter/bootstrap.git",
                "type": "git",
                "reference": "3.0.0-wip"
            }
        }
    }, {
        "type": "package",
        "package": {
            "name": "FortAwesome/Font-Awesome",
            "version": "dev-master",
            "type": "lithium-source",
            "source": {
                "url": "https://github.com/FortAwesome/Font-Awesome.git",
                "type": "git",
                "reference": "master"
            }
        }
    }, {
        "type": "package",
        "package": {
            "name": "leafo/lessphp",
            "version": "dev-master",
            "type": "lithium-source",
            "source": {
                "url": "https://github.com/leafo/lessphp.git",
                "type": "git",
                "reference": "master"
            }
        }
    }],

    "require": {
        "composer/installers": "dev-master",
        "twitter/bootstrap": "dev-master",
        "FortAwesome/Font-Awesome": "dev-master",
        "leafo/lessphp": "dev-master"
    }
}

